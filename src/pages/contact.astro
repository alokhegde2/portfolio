    <Footer />
  </main>
</Layout>

<style>
  @font-face {
    font-family: "Permanent Marker";
    src: url("/fonts/PermanentMarker-Regular.ttf") format("truetype");
    font-display: swap;
  }

  h4 {
    font-family: "Permanent Marker";
    font-size: 2.5rem;
    text-align: left;
    color: #f0a500;
  }

  .main-container {
    background-color: #f7f7f7;
    min-height: 75vh;
    margin: 2rem;
    padding: 2rem;
  }

  .left-container {
    animation-name: leftContAnim;
    animation-duration: 1s;
    animation-timing-function: ease-in;
    -webkit-animation-timing-function: linear;
  }

  @keyframes leftContAnim {
    0% {
      transform: translatex(-100px);
      opacity: 0;
    }
    25% {
      opacity: 0.8;
    }
    100% {
      transform: translatex(0px);
      opacity: 1;
    }
  }

  h5 {
    font-family: "Roboto Mono";
    font-size: 2rem;
    font-weight: 600;
  }

  .first-h5 {
    color: #f0a500;
  }

  p {
    font-family: "Roboto Mono";
    font-size: 0.9rem;
    font-weight: 400;
  }

  h6 {
    font-family: "Roboto Mono";
    font-size: 0.9rem;
    font-weight: 600;
  }

  .contact-text {
    color: #5c5c5c;
  }

  .right-container {
    display: flex;
    align-items: center;
    justify-content: center;
    animation-name: rightContAnim;
    animation-duration: 1s;
    animation-timing-function: ease-in;
    -webkit-animation-timing-function: linear;
  }

  @keyframes rightContAnim {
    0% {
      transform: translatex(100px);
      opacity: 0;
    }
    25% {
      opacity: 0.8;
    }
    100% {
      transform: translatex(0px);
      opacity: 1;
    }
  }

  input {
    width: 80%;
    padding: 12px 10px;
    margin: 8px 0;
    border: 1px solid #5c5c5c;
    box-sizing: border-box;
    font-family: "Roboto Mono";
    font-size: 0.9rem;
    font-weight: 200;
  }

  textarea {
    width: 80%;
    padding: 12px 10px;
    margin: 8px 0;
    border: 1px solid #5c5c5c;
    box-sizing: border-box;
    font-family: "Roboto Mono";
    font-size: 0.9rem;
    font-weight: 200;
  }

  input:focus {
    outline: none;
    border: 1px solid #f0a500 !important;
  }

  textarea:focus {
    outline: none;
    border: 1px solid #f0a500 !important;
  }

  button {
    background-color: black;
    color: #ffff;
    border: 2px solid black;
    padding: 0.2rem;
    padding-left: 0.8rem;
    padding-right: 0.8rem;
    border-radius: 2rem;
    font-family: "Roboto Mono";
    font-size: 0.8rem;
    width: 8rem;
    margin-top: 1rem;
  }

  .contactImage {
    height: 20rem;
  }
</style>
